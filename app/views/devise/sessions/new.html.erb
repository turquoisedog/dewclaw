<% title 'sign in' %>
<main class="m-auto w-100 row">
  <div class="col-12 col-md-5 d-flex align-items-center justify-content-start justify-content-md-center">
    <h1 class="brand-text">Sign in</h1>
  </div>
  <div class="col-1">
    <div class="vr d-none d-md-block h-100"></div>
  </div>
  <div class="col-12 col-md-6">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3 w-100">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: " " %>
        <%= f.label :email %>
      </div>

      <div class="form-floating mb-3 w-100">
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: " " %>
        <%= f.label :password %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label :remember_me, class: "form-check-label" %>
        </div>
      <% end %>

      <div class="actions d-grid">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
