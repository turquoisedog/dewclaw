<% title 'reset password' %>
<main class="m-auto w-100 row">
  <div class="col-12 col-md-5 d-flex align-items-center justify-content-start justify-content-md-center">
    <h1 class="brand-text">Reset password</h1>
  </div>
  <div class="col-1">
    <div class="vr d-none d-md-block h-100"></div>
  </div>
  <div class="col-12 col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="form-floating mb-3 w-100">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: " " %>
        <%= f.label :email %>
        <%= render partial: 'devise/shared/error_message', locals: { resource: resource, field: :email } %>
      </div>

      <div class="actions d-grid">
        <%= f.submit "Send reset instructions", class: "btn btn-warning" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</main>
